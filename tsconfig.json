{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "rootDir": "./",
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "./src/__tests__"
    ],
    "include": [
        "./src/*",
        "./package.json"
    ]
}